			 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             xmlns:local="clr-namespace:CustomRenderer;assembly=CustomRenderer"
			 x:Class="CustomRenderer.CameraPage"
			 Title="Camera Page">
